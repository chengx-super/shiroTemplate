<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yw.shirotemplate.myShiro.mapper.RoleMapper">

    <resultMap type="com.yw.shirotemplate.myShiro.entity.Role" id="getMap">
        <id property="id" column="id"></id>
        <result property="roleCode" column="user_code"/>
        <result property="roleName" column="role_name"/>
    </resultMap>


    <select id="listRole" parameterType="String" resultType="String">
        SELECT r.role_name
        FROM user u
        LEFT JOIN user_role ur ON u.id = ur.user_id
        LEFT JOIN role r ON ur.role_id = r.id
        WHERE u.user_code = #{userCode}
    </select>

</mapper>
